<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/corrct_date"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="fill"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:gravity="fill"
        android:text="日期:"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/corrct_date"
        app:layout_constraintEnd_toStartOf="@+id/corrct_date" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:text="类型:"
        android:layout_height="50dp"
        android:gravity="fill"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/correct_reson"
        app:layout_constraintEnd_toStartOf="@+id/correct_reson" />

    <EditText
        android:id="@+id/correct_reson"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corrct_date" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="fill"
        android:textSize="20dp"
        android:text="姓名:"
        app:layout_constraintBottom_toBottomOf="@+id/correct_name"
        app:layout_constraintEnd_toStartOf="@+id/correct_name" />

    <EditText
        android:id="@+id/correct_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_reson" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="金额:"
        android:gravity="fill"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/correct_account"
        app:layout_constraintEnd_toStartOf="@+id/correct_account" />

    <EditText
        android:id="@+id/correct_account"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_name" />

    <TextView
        android:id="@+id/textView_correct_year"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/corrct_date" />

</androidx.constraintlayout.widget.ConstraintLayout>