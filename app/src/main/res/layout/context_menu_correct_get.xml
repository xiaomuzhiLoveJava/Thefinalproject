<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/corrct_date_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="date"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="日期:"
        android:gravity="fill"
        app:layout_constraintBottom_toBottomOf="@+id/corrct_date_get"
        app:layout_constraintEnd_toStartOf="@+id/corrct_date_get" />

    <TextView
        android:id="@+id/textView9_get"
        android:layout_width="wrap_content"
        android:text="类型:"
        android:layout_height="50dp"
        android:gravity="fill"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/correct_reson_get"
        app:layout_constraintEnd_toStartOf="@+id/correct_reson_get" />

    <TextView
        android:id="@+id/correct_reson_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corrct_date_get" />

    <TextView
        android:id="@+id/textView10_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="fill"
        android:textSize="20dp"
        android:text="姓名:"
        app:layout_constraintBottom_toBottomOf="@+id/correct_name_get"
        app:layout_constraintEnd_toStartOf="@+id/correct_name_get" />

    <EditText
        android:id="@+id/correct_name_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="textMultiLine"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_reson_get" />

    <TextView
        android:id="@+id/textView11_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="金额:"
        android:gravity="fill"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/correct_account_get"
        app:layout_constraintEnd_toStartOf="@+id/correct_account_get" />

    <EditText
        android:id="@+id/correct_account_get"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="fill"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_name_get" />

</androidx.constraintlayout.widget.ConstraintLayout>